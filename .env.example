# Environment Configuration Template
# Copy this file to .env and update with your values

# ============================================
# RTX5080 ANPR System Configuration
# ============================================

# --------------------------------------------
# API Configuration
# --------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000

# --------------------------------------------
# Ollama Vision Model (Primary OCR Engine)
# --------------------------------------------
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5vl:3b

# --------------------------------------------
# MySQL Database (Local Storage)
# --------------------------------------------
# Vehicle logs are stored in MySQL database
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=anpr_system
MYSQL_USER=debian-sys-maint
MYSQL_PASSWORD=your_mysql_password_here

# --------------------------------------------
# External API Integration (Data Forwarding)
# --------------------------------------------
# After saving to MySQL, data is forwarded to external surveillance API
EXTERNAL_API_ENABLED=true
EXTERNAL_API_URL=http://100.100.1.6:3000/api/vehicle-surveillance
EXTERNAL_API_TOKEN=your_api_token_here

# --------------------------------------------
# MongoDB (DISABLED - Using MySQL instead)
# --------------------------------------------
# MongoDB is NOT used in this deployment
# All data is stored in MySQL and forwarded to external API
MONGODB_ENABLED=false
# MONGODB_URI=mongodb://localhost:27017
# MONGODB_DB=anpr_system

# --------------------------------------------
# Detection Thresholds
# --------------------------------------------
VEHICLE_CONFIDENCE=0.4
PLATE_CONFIDENCE=0.3

# --------------------------------------------
# Image Storage
# --------------------------------------------
IMAGES_DIR=saved_images
